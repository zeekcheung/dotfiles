{
  // ================== workbench/window ==================
  "breadcrumbs.enabled": true,
  "workbench.colorCustomizations": {
    "[Everforest Dark]": {
      "titleBar.activeBackground": "#1E1E2E",
      "titleBar.inactiveBackground": "#1E1E2E",
      "editor.background": "#2E1E2E",
      "editorGroupHeader.tabsBackground": "#1E1E2E",
      "editorSuggestWidget.background": "#1E1E2E",
      "editorHoverWidget.background": "#1E1E2E",
      "tab.activeBackground": "#1E1E2E",
      "tab.inactiveBackground": "#1E1E2E",
      "tab.unfocusedInactiveBackground": "#181825FF",
      "tab.unfocusedActiveBackground": "#181825FF",
      "tab.hoverBackground": "#181825FF",
      "sideBar.background": "#1E1E2E",
      "activityBar.background": "#1E1E2E",
      "statusBar.background": "#1E1E2E",
      "banner.background": "#1E1E2E",
      "menu.background": "#1E1E2E",
      "terminal.background": "#1E1E2E",
      "panel.background": "#1E1E2E",
      "quickInput.background": "#1E1E2E",
      "statusBar.noFolderBackground": "#1E1E2E",
      "statusBarItem.remoteBackground": "#1E1E2E"
    },
    "[Gruvbox Material Dark]": {
      "titleBar.activeBackground": "#1E1E2E",
      "titleBar.inactiveBackground": "#1E1E2E",
      "editor.background": "#1E1E2E",
      "editorGroupHeader.tabsBackground": "#1E1E2E",
      "editorSuggestWidget.background": "#1E1E2E",
      "editorHoverWidget.background": "#1E1E2E",
      "tab.activeBackground": "#1E1E2E",
      "tab.inactiveBackground": "#1E1E2E",
      "tab.unfocusedInactiveBackground": "#181825FF",
      "tab.unfocusedActiveBackground": "#181825FF",
      "tab.hoverBackground": "#181825FF",
      "sideBar.background": "#1E1E2E",
      "activityBar.background": "#1E1E2E",
      "statusBar.background": "#1E1E2E",
      "banner.background": "#1E1E2E",
      "menu.background": "#1E1E2E",
      "terminal.background": "#1E1E2E",
      "panel.background": "#1E1E2E",
      "quickInput.background": "#1E1E2E",
      "statusBar.noFolderBackground": "#1E1E2E",
      "statusBarItem.remoteBackground": "#1E1E2E"
    }
  },
  "workbench.editor.empty.hint": "hidden",
  "workbench.editor.enablePreviewFromQuickOpen": true,
  "workbench.settings.editor": "json",
  "workbench.sideBar.location": "left",
  "workbench.startupEditor": "none",
  "workbench.tree.indent": 14,
  "workbench.tree.renderIndentGuides": "always",
  "workbench.layoutControl.enabled": false,
  "window.autoDetectColorScheme": true,
  "window.commandCenter": false,
  "window.titleBarStyle": "custom",
  "window.zoomLevel": 1.25,
  "everforest.darkContrast": "hard",

  // ================== editor ==================
  "editor.autoClosingBrackets": "always",
  "editor.autoClosingQuotes": "always",
  "editor.accessibilitySupport": "off",
  "editor.bracketPairColorization.independentColorPoolPerBracketType": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.fixAll": "explicit",
    "source.organizeImports": "explicit"
  },
  "editor.cursorBlinking": "smooth",
  "editor.cursorStyle": "line",
  "editor.cursorWidth": 3,
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.detectIndentation": false,
  "editor.tabSize": 2,
  "editor.lineNumbers": "relative",
  "editor.fontFamily": "JetBrainsMono Nerd Font, Consolas, \"Rec Mono Semicasual\"",
  "editor.fontSize": 16,
  "editor.fontLigatures": true,
  "editor.formatOnSave": true,
  "editor.glyphMargin": true,
  "editor.hover.delay": 200,
  "editor.inlayHints.padding": true,
  "editor.lineHeight": 24,
  "editor.linkedEditing": true,
  "editor.letterSpacing": 0.5,
  "editor.mouseWheelZoom": true,
  "editor.minimap.showSlider": "always",
  "editor.semanticHighlighting.enabled": true,
  "editor.smoothScrolling": true,
  "editor.suggest.insertMode": "replace",
  "editor.suggest.preview": true,
  "editor.suggest.shareSuggestSelections": true,
  "editor.tokenColorCustomizations": {
    "[Material Theme*]": {
      "comments": {
        "fontStyle": "",
        "foreground": "#637777"
      }
    },
    "[Kanagawa]": {
      "comments": "#FF9E3B"
    }
  },
  "editor.unicodeHighlight.allowedCharacters": {
    "：": true,
    "➕": true
  },
  "editor.unicodeHighlight.allowedLocales": {
    "zh-hans": true,
    "zh-hant": true
  },
  "editor.wordWrapColumn": 120,
  "editor.wordWrap": "wordWrapColumn",
  "zenMode.hideLineNumbers": false,

  // ================== explorer ==================
  "explorer.confirmDelete": false,
  "explorer.decorations.badges": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.incrementalNaming": "smart",

  // ================== terminal ==================
  "terminal.external.windowsExec": "",
  "terminal.integrated.allowChords": false,
  "terminal.integrated.tabs.enabled": true,
  "terminal.integrated.autoReplies": {
    "Terminate batch job (Y/N)": "\r"
  },
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.fontSize": 16,
  "terminal.integrated.copyOnSelection": true,
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.defaultProfile.windows": "Windows PowerShell",
  "terminal.integrated.enablePersistentSessions": false,
  // prevent VSCode from modifying the terminal colors
  "terminal.integrated.minimumContrastRatio": 1,
  "terminal.integrated.profiles.windows": {
    "PowerShell": {
      "source": "PowerShell",
      "icon": "terminal-powershell"
    }
  },
  "terminal.integrated.smoothScrolling": true,

  // ================== files ==================
  "files.autoGuessEncoding": true,
  "files.associations": {
    "*.env.dev": "env",
    "*.env.prod": "env",
    "*.env.development": "env",
    "*.env.production": "env",
    "*.cjson": "jsonc",
    "*.wxss": "css",
    "*.wxs": "javascript",
    "*.tsx": "typescriptreact",
    ".clangd": "yaml"
  },
  "files.autoSaveDelay": 10000,
  "files.exclude": {
    "**/.classpath": true,
    "**/.project": true,
    "**/.settings": true,
    "**/.factorypath": true
  },
  "files.trimTrailingWhitespace": true,
  "files.trimFinalNewlines": true,

  // ================== git ==================
  "diffEditor.codeLens": true,
  "git.autofetch": true,
  "git.confirmSync": false,
  "git.ignoreMissingGitWarning": true,
  "git.mergeEditor": true,
  "git.openRepositoryInParentFolders": "never",
  "gitlens.showWelcomeOnInstall": false,
  "gitlens.codeLens.enabled": false,
  "merge-conflict.autoNavigateNextConflict.enabled": true,

  // ================== language ==================
  "[cpp]": {
    "editor.tabSize": 4
  },
  "clangd.arguments": [
    "--all-scopes-completion",
    "--background-index",
    "--clang-tidy",
    "--completion-style=detailed",
    "--fallback-style=llvm",
    "--function-arg-placeholders",
    "--header-insertion=iwyu",
    "--header-insertion-decorators",
    "-j=2",
    "--pch-storage=disk",
    "--log=verbose",
    "--pretty"
  ],
  // rust
  "[rust]": {
    "editor.tabSize": 4
  },
  // html
  "html.format.enable": false,
  "html.format.templating": true,
  "html.format.indentHandlebars": true,
  "html.format.indentInnerHtml": true,
  "html.format.wrapLineLength": 80,
  "emmet.triggerExpansionOnTab": true,
  // javascript
  "javascript.format.enable": false,
  "javascript.inlayHints.enumMemberValues.enabled": true,
  "javascript.inlayHints.parameterTypes.enabled": true,
  "javascript.inlayHints.propertyDeclarationTypes.enabled": true,
  "javascript.preferences.importModuleSpecifier": "non-relative",
  "javascript.updateImportsOnFileMove.enabled": "always",
  "javascript.validate.enable": false,
  // typescripts
  "typescript.format.enable": false,
  "typescript.inlayHints.propertyDeclarationTypes.enabled": true,
  "typescript.inlayHints.variableTypes.enabled": true,
  "typescript.preferences.importModuleSpecifier": "non-relative",
  "typescript.updateImportsOnFileMove.enabled": "always",
  // json
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // ================== debug ==================
  "debug.onTaskErrors": "showErrors",
  "debug.inlineValues": "auto",
  "debug.console.closeOnEnd": true,
  "debug.terminal.clearBeforeReusing": true,

  // ================== vscode-neovim ==================
  // prettier-ignore
  "vscode-neovim.ctrlKeysForNormalMode": [ "b", "d", "f", "i", "o", "r", "t", "u", "v", "w", "]", "right", "left", "up", "down", "backspace", "delete" ],
  // prettier-ignore
  "vscode-neovim.ctrlKeysForInsertMode": [ "b", "d", "f", "i", "o", "r", "t", "u", "w", "]", "right", "left", "up", "down", "backspace", "delete" ],

  // ================== misc ==================
  "extensions.autoUpdate": "onlyEnabledExtensions",
  "extensions.closeExtensionDetailsOnViewChange": true,
  "extensions.experimental.affinity": {
    "asvetliakov.vscode-neovim": 1,
    "vscodevim.vim": 1
  },
  "extensions.ignoreRecommendations": true,
  "remote.downloadExtensionsLocally": true,
  "search.smartCase": true,
  "search.showLineNumbers": true,
  "security.workspace.trust.untrustedFiles": "open",
  "security.workspace.trust.banner": "never",
  "security.workspace.trust.startupPrompt": "never",
  "task.allowAutomaticTasks": "on",
  "task.problemMatchers.neverPrompt": {
    "shell": true
  },
  "http.proxySupport": "fallback",
  "http.proxyStrictSSL": false,
  "settingsSync.ignoredSettings": ["-window.zoomLevel"]
}
